<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/css/style.css' />
    <!-- importing from bootstrap CSS-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <!-- importing Jquery via external link -->
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
  </head>
  <body>
      <nav class="navbar navbar-inverse">
          <div class="container-fluid">
              <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="http://localhost:3000/create">New Posts</a></li>
                <li><a href="http://localhost:3000/edit">Edit Posts</a></li>
                <li><a href="http://localhost:3000/read">Liverpool News</a></li>
                <li><a href="http://localhost:3000/contactUs">ContactUs</a></li>
              </ul>
          </div><!-- /.container-fluid -->
        </nav>
        <div class="jumbotron">
            <center>
                <h1><%= title %></h1>
                <p><p>Welcome to Anfield</p></p>
            </center>
        </div>

    <div class="container">
      <div class="row">
        
            <% if  (posts) { %>
        
              <% posts.forEach (function (post){ %>
              <div class="col-xs-12 col-md-6 col-lg-4" id="cols">
                    <!-- heading of article -->
                    <div class="panel panel-danger" id="all" >
                        <div class="panel-heading">
                          <h2><%= post.title %></h2>
                        </div>

                        <!-- Body for article -->
                        <div class="panel-body" >   
                            <p> Article: <%- post.content.substring(0,500) %> ...</p>
                            <img src="<%= post.image %>" alt="" width="330px" height="300px">
                            <center>
                                <p id="post"><a class="btn btn-danger btn-lg" href="http://localhost:3000/read">Read More</a></p>
                            </center> 
                        </div>
                        <!-- footer for article -->
                        <div class="panel-footer">
                            <p> Posted By: <%= post.author %> </p>
                            <p>Date Posted:<%= post.time %> </p>
                        </div>
                  
                   </div>          
               </div>
                        
              <% }); %>

            <% } %>
          </div>   
      </div>
      <footer>
        <div>
            <p>All rights reserved 2018 | Muneer.</p>
        </div>
      </footer>



  </body>
</html>
